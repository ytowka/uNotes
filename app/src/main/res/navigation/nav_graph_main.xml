<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ytowka.unotes.screens.login.LoginFragment"
        android:label="@string/authentication"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/login_action"
            app:destination="@id/noteListFragment"

            app:popUpTo='@id/loginFragment'
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/noteListFragment"
        android:name="com.ytowka.unotes.screens.notes.NoteListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_note_list" >
        <action
            android:id="@+id/edit_note"
            app:destination="@id/editFragment" />
        <action
            android:id="@+id/overview_note"
            app:destination="@id/overviewFragment" />
        <action
            android:id="@+id/logout"
            app:destination="@id/loginFragment"

            app:popUpTo='@id/noteListFragment'
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.ytowka.unotes.screens.edit.EditFragment"
        android:label="fragment_edit"
        tools:layout="@layout/fragment_edit" />
    <fragment
        android:id="@+id/overviewFragment"
        android:name="com.ytowka.unotes.screens.edit.OverviewFragment"
        android:label="fragment_overview"
        tools:layout="@layout/fragment_overview" />
    <fragment
        android:id="@+id/updatePlanFragment"
        android:name="com.ytowka.unotes.screens.updateplan.UpdatePlanFragment"
        android:label="@string/update_plan"
        tools:layout="@layout/fragment_update_plan" />
    <fragment
        android:id="@+id/invitesFragment"
        android:name="com.ytowka.unotes.screens.invites.InvitesFragment"
        android:label="@string/invitations"
        tools:layout="@layout/fragment_invites" />
</navigation>